{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "types": ["jest", "node"],
    "moduleResolution": "node",
    "allowJs": true,
    "checkJs": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "alwaysStrict": true,
    "outDir": "./dist/server"
  },
  "include": [
    "config/**/*",
    "src/server/**/*"
  ]
}
