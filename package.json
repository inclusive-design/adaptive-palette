{
  "name": "adaptive-palette",
  "private": true,
  "type": "module",
  "scripts": {
    "start": "run-s build:* start:server",
    "build:client": "vite build",
    "build:server": "tsc --project tsconfig.node.json",
    "start:server": "node dist/server/src/server/server.js",
    "dev": "run-p dev:* start:devServer",
    "dev:watchClient": "vite build --watch",
    "dev:watchServer": "tsc --project tsconfig.node.json --watch",
    "start:devServer": "wait-on dist/server/src/server/server.js && nodemon dist/server/src/server/server.js",
    "serveAppsDemos": "vite --port 5173",
    "lint": "run-p lint:*",
    "lint:js": "eslint .",
    "lint:markdown": "markdownlint-cli2 \"./**/*.md\" \"#node_modules\" \"#dist\"",
    "test": "run-s test:*",
    "test:client": "jest --config jest.config.client.cjs",
    "test:server": "node --experimental-vm-modules node_modules/.bin/jest --config jest.config.node.cjs"
  },
  "dependencies": {
    "@langchain/community": "^0.2.31",
    "@preact/signals": "^1.2.3",
    "@types/express": "^4.17.21",
    "@types/node": "^22.5.1",
    "@types/serve-static": "^1.15.7",
    "@xenova/transformers": "^2.17.2",
    "bliss-svg-builder": "^0.1.0-alpha.4",
    "express": "^4.19.2",
    "faiss-node": "^0.5.1",
    "htm": "^3.1.1",
    "ollama": "^0.5.8",
    "preact": "^10.23.2",
    "sass": "^1.77.8 ",
    "serve-static": "^1.15.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.25.4",
    "@eslint/eslintrc": "^3.1.0",
    "@eslint/js": "^9.9.1",
    "@preact/preset-vite": "^2.9.0",
    "@testing-library/jest-dom": "^6.5.0",
    "@testing-library/preact": "^3.2.3",
    "@types/jest": "^29.5.12",
    "@typescript-eslint/eslint-plugin": "^8.3.0",
    "@typescript-eslint/parser": "^8.3.0",
    "babel-jest": "^29.6.4",
    "eslint": "^9.9.1",
    "globals": "^15.9.0",
    "jest": "^29.6.4",
    "jest-environment-jsdom": "^29.6.4",
    "markdownlint-cli2": "^0.13.0",
    "nodemon": "^3.1.4",
    "npm-run-all": "^4.1.5",
    "ts-jest": "^29.2.5",
    "typescript": "^5.5.4",
    "vite": "^5.4.2",
    "wait-on": "^8.0.0",
    "whatwg-fetch": "^3.6.20"
  }
}
